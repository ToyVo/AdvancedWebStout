<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <title>Game Browser</title>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Collin Diekvoss</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav"></ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="pb-2 mt-4 mb-2 border-bottom" style="width: 100%;">
          <h1>Board Game Browser</h1>
        </div>
      </div>
      <div id="gameGrid" class="row">
        <% gameData.forEach((game) => { %> 
          <%- include('gameTile.ejs', {game})%> 
        <% }) %>
      </div>
    </div>

    <div
      class="modal fade"
      id="boardGameModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="boardGameModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="boardGameModalLabel"></h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div id="boardGameModalBody" class="modal-body"></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="/app.bundle.js"></script>
  </body>
</html>
